      <!-- START THE LOGIN PART -->

      <section id="login-section" class="login-section">
        <div class="login-form container">
            <h2 class="display-2--login">Login</h2>
            <form action="/users/login" method="POST">
                <div class="form-group--login">
                  <label for="student_id" class="col-form-label" placeholder="Student ID">Student ID</label><br>
                  <div>
                    <input type="text" class="form-control" id="student_id" placeholder="Student ID" name="student_id" value="<%= user.student_number %>" requried>
                  </div>
                </div>
                <div class="form-group--login">
                  <label for="username" class="col-sm-2 col-form-label">Username</label><br>
                  <div>
                    <input type="text" class="form-control" id="username" placeholder="Username" name="username" value="<%= user.name %>" required>
                  </div>
                </div>
                <span class="display-2--login">
                    <input type="submit" class="btn btn-primary btn-large btn-main--login" value="Submit">
                </span>
              </form>
        </div>
      </section>
